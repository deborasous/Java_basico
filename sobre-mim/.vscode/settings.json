{
    "java.project.sourcePaths": ["src"],
    "java.project.outputPath": "bin",
    "java.project.referencedLibraries": [
        "lib/**/*.jar"
    ],
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit"
    },
    "emeraldwalk.runonsave": {
        "commands": [
            {
                "match": "\\.java$",
                "cmd": "workbench.action.tasks.build"
            }
        ]
    }
}
